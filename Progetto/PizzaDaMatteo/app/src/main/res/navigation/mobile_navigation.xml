<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.mandija.pizzadamatteo.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" >
        <action
            android:id="@+id/action_navigation_dashboard_to_mostraOrdine"
            app:destination="@id/mostraOrdine" />
    </fragment>
    <fragment
        android:id="@+id/ordineDomicilio"
        android:name="com.mandija.pizzadamatteo.ui.home.OrdineDomicilio"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_ordine_domicilio" />
    <fragment
        android:id="@+id/completamentoOrdine"
        android:name="com.mandija.pizzadamatteo.CompletamentoOrdine"
        android:label="@string/title_completamento_ordine"
        tools:layout="@layout/fragment_completamento_ordine" >
        <action
            android:id="@+id/action_completamentoOrdine_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/mostraOrdine"
        android:name="com.mandija.pizzadamatteo.MostraOrdine"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_mostra_ordine" >
        <action
            android:id="@+id/action_mostraOrdine_to_navigation_dashboard"
            app:destination="@id/navigation_dashboard" />
    </fragment>
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.mandija.pizzadamatteo.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_completamentoOrdine"
            app:destination="@id/completamentoOrdine" />
    </fragment>

</navigation>